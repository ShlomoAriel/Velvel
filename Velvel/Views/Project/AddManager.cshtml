@using System.Web.UI.WebControls
@model Velvel.Models.Project.ProjectManagersViewModel
<div class="row-fluid sortable">

    <div class="box span6">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon edit"></i><span class="break"></span>Create A Project</h2>
            <div class="box-icon">
                <a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
                <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            @using (Html.BeginForm("AddManagerSubmit", "project", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {

                @Html.AntiForgeryToken()
                <fieldset>
                    <div class="control-group" style="display: none;">
                        @Html.LabelFor(m => m.ProjectId, new { @class = "control-label" })
                        <div class="controls">
                            @Html.TextBoxFor(m => m.ProjectId, Model.ProjectId)
                        </div>
                    </div>
                    <div class="control-group">
                         @Html.LabelFor(x => x.AllManagers, new {@class = "control-label"})
                        <div class="controls">
                            <div class="input-prepend">
                                @Html.DropDownListFor(x => x.ManagerId, Model.AllManagers,
                                    new
                                    {
                                        @class = "form-control"
                                    })
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <input type="submit" class="btn btn-primary" value="Create"/>
                        <button class="btn">Cancel</button>
                    </div>
                </fieldset>
            }
        </div>
    </div><!--/span-->
    <div class="box span6">
        <div class="box-header" data-original-title>
            <h2>
                <i class="halflings-icon user"></i><span class="break"></span>Members
            </h2>
