@model Velvel.Models.Project.ProjectViewModel
@{
    ViewBag.Title = "Create";
}
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon edit"></i><span class="break"></span>Create A Project</h2>
            <div class="box-icon">
                <a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
                <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            @using (Html.BeginForm("Create", "project", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
    <fieldset>
        <div class="control-group">
            @Html.LabelFor(x => x.Name, new { @class = "control-label" })
            <div class="controls">
                <div class="input-prepend">
                    @Html.TextBoxFor(x => x.Name, new {@id = "prependedInput"})
                </div>
                <span class="help-inline">Here's more help text</span>
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(x => x.Active, new { @class = "control-label" })
            <div class="controls">
                <label class="checkbox inline">
                    @Html.CheckBoxFor(x => x.Active, new { @value = "Active", @id = "inlineCheckbox1" }) Options
                </label>
            </div>
        </div>
        <div class="form-actions">
            <input type="submit" class="btn btn-primary" value="Create" />
            <button class="btn">Cancel</button>
        </div>
    </fieldset>
            }
        </div>
    </div><!--/span-->
</div><!--/row-->
